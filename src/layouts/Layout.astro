---
// Define the Props interface
interface Props {
    title: string;
}
import LanguageSelector from '../components/LanguageSelector.svelte';

// Extract title from props using Astro.props
const { title } = Astro.props as Props;
const currentLang = Astro.url.pathname.split('/')[1] || 'en';
---

<!doctype html>
<html lang={currentLang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="theme-color" content="#1a0f1d" />
        {/* Only include manifest in production */}
        {!import.meta.env.DEV && <link rel="manifest" href="/manifest.webmanifest" />}
        <title>{title}</title>
    </head>
    <body>
        <!-- Top bar with language selector -->
        <header class="fixed top-0 left-0 right-0 bg-pink-950/90 backdrop-blur-lg z-50 border-b border-pink-200/10">
            <div class="container mx-auto px-4 h-14 flex justify-between items-center">
                <div class="text-pink-100/90 font-light tracking-wide">{title}</div>
                <LanguageSelector currentLang={currentLang} client:load />
            </div>
        </header>

        <!-- Main content -->
        <main class="pt-14 pb-16 min-h-screen bg-gradient-to-b from-[#1a0f1d] to-[#2d1b2e]">
            <slot />
        </main>

        <!-- PWA Toast -->
        {!import.meta.env.DEV && (
            <div id="pwa-toast" role="alert" aria-labelledby="toast-message">
                <div class="message">
                    <span id="toast-message">New content available</span>
                </div>
                <button id="pwa-refresh">Reload</button>
                <button id="pwa-close">Close</button>
            </div>
        )}
    </body>
</html>

<style is:global>
    :root {
        --accent: 219, 39, 119; /* Pink-600 */
        --accent-light: 249, 168, 212; /* Pink-300 */
        --accent-dark: 131, 24, 67; /* Pink-800 */
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }
    html {
        font-family: system-ui, sans-serif;
        background: #1a0f1d;
        color-scheme: dark;
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }

    /* PWA Toast Styles */
    #pwa-toast {
        position: fixed;
        right: 0;
        bottom: 80px;
        margin: 16px;
        padding: 12px;
        border: 1px solid rgba(249, 168, 212, 0.2);
        border-radius: 4px;
        z-index: 1;
        text-align: left;
        box-shadow: 3px 4px 5px 0 rgba(249, 168, 212, 0.1);
        background-color: #2d1b2e;
        color: #fdf2f8;
        display: none;
    }
    #pwa-toast.show {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    #pwa-toast .message {
        margin-bottom: 8px;
    }
    #pwa-toast button {
        border: 1px solid rgba(249, 168, 212, 0.2);
        outline: none;
        margin-right: 5px;
        border-radius: 2px;
        padding: 3px 10px;
        background: rgba(249, 168, 212, 0.1);
        color: #fdf2f8;
        font-size: 0.9em;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    #pwa-toast button:hover {
        background: rgba(249, 168, 212, 0.2);
    }
</style>
