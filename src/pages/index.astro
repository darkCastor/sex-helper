---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
<main class="min-h-screen bg-gradient-to-r from-purple-600 to-blue-600">
  <nav class="p-6 flex justify-between items-center">
    <div class="text-white text-2xl font-bold">ConnectMe</div>
    <div class="flex items-center gap-4">
      <!-- Snapchat Icon -->
      <a href="https://www.snapchat.com/add/YOUR_SNAPCHAT_USERNAME"
         target="_blank"
         rel="noopener noreferrer"
         class="text-white hover:text-yellow-400 transition-colors"
         title="Follow us on Snapchat">
        <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
